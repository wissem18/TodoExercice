<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{asset('node_modules/bootstrap/dist/css/bootstrap.css')}}">
    <title>Liste de todo</title>
</head>
<body>
<div class="container">
    {%for content in app.session.flashBag.get('error')%}
        <div class="alert alert-danger">{{content}}</div>
    {%endfor%}
    {%for content in app.session.flashBag.get('success')%}
        <div class="alert alert-success">{{content}}</div>
    {%endfor%}

</div>
<div class="container">
    <ol class="list-group">
        {%for name ,todo in app.session.get('todos')%}
            <li class="list-group-item">{{name}} : {{todo}}</li>
        {%endfor%}
    </ol>
</div>
</body>
</html>